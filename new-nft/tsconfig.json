{
  "compilerOptions": {
    "module": "esnext", // or "node16" or "nodenext"
    "target": "es2022", // or "esnext"
    "moduleResolution": "node", // Required for Node.js
    "esModuleInterop": true, // Enable ES module compatibility
    "strict": true, // Enable strict type-checking
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./", // Root directory for source files
    "skipLibCheck": true // Skip type-checking for libraries
  },
  "include": ["**/*.ts"], // Include all TypeScript files
  "exclude": ["node_modules"] // Exclude node_modules
}